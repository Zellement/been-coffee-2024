{
    "extends": "stylelint-config-standard-scss",
    "rules": {
        "selector-class-pattern": null,
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "tailwind",
                    "apply",
                    "variants",
                    "responsive",
                    "screen",
                    "include",
                    "for",
                    "mixin",
                    "use",
                    "extend"
                ]
            }
        ],
        "no-descending-specificity": null
    },
    "ignoreFiles": [
        "vendor/**/*"
    ]
}